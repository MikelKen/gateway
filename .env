# Configuración del Gateway Service AI
NODE_ENV=development
PORT=4000

# === CONFIGURACIÓN DEL MICROSERVICIO ERP (SPRING BOOT) ===
# URL del microservicio ERP Spring Boot
SERVICE_ERP_URL=http://localhost:8080

# Configuración específica para GraphQL del ERP (incluye context path /api)
ERP_GRAPHQL_ENDPOINT=/api/graphql
ERP_TIMEOUT=10000

# === CONFIGURACIÓN DE OTROS MICROSERVICIOS ===
# Business Intelligence Service
SERVICE_BI_URL=http://localhost:8081

# Machine Learning Service 
SERVICE_ML_URL=http://127.0.0.1:8000/graphql

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=true

# === CONFIGURACIÓN DE TIMEOUTS ===
DEFAULT_TIMEOUT=5000
LONG_TIMEOUT=10000

# === CONFIGURACIÓN DE APOLLO SERVER ===
APOLLO_INTROSPECTION=true
APOLLO_PLAYGROUND=true
APOLLO_PATH=/graphql

# === CONFIGURACIÓN DE CORS ===
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# === CONFIGURACIÓN DE RETRY PARA ERP ===
ERP_RETRY_ATTEMPTS=3
ERP_RETRY_DELAY=1000

# === CONFIGURACIÓN DE HEALTH CHECK ===
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=2000