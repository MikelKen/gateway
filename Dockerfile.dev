# ===== Build Stage =====
FROM node:18-alpine AS builder

WORKDIR /usr/src/app

# Copiar package files
COPY package*.json ./

# Instalar todas las dependencias
RUN npm ci --only=production

# ===== Runtime Stage =====
FROM node:18-alpine

# Etiquetas
LABEL maintainer="SW2 Team"
LABEL description="GraphQL Gateway for BI, ML, and ERP microservices (DEV)"

# Crear usuario no-root
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001

WORKDIR /usr/src/app

# Copiar node_modules desde builder
COPY --from=builder /usr/src/app/node_modules ./node_modules

# Copiar código fuente
COPY . .

# Cambiar propietario
RUN chown -R nodejs:nodejs .

# Usar usuario no-root
USER nodejs

# Exponer puerto
EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:4000/graphql', (r) => {if (r.statusCode !== 200) throw new Error(r.statusCode)})"

# Comando para ejecutar la aplicación
CMD ["npm", "start"]
